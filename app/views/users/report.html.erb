<h1>Expenses</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Category</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.id %></td>
        <td><%= expense.category.name %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><strong>Total: <%= @sum %><strong></p>
<br>


