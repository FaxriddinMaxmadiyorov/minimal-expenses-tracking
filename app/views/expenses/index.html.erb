<h1>Expenses</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Category</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.id %></td>
        <td><%= expense.category_id %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.description %></td>
        <td><%= clink_to 'Show', expense, 'fa-search' %></td>
        <td><%= clink_to 'Edit', edit_expense_path(expense), 'fa-edit' %></td>
        <td><%= cdlink_to 'Destroy', expense %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New', new_expense_path %>

