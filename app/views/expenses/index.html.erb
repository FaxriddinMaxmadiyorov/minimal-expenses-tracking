<h1>Expenses</h1>
<%= link_to 'public data', report_user_path(current_user.id), class: 'btn btn-secondary' %><br>
<br>

<%= render 'filter_form' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Avatar</th>
      <th>Category</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.id %></td>
        <td><%= image_tag expense.avatar, width: "50px" if expense.avatar.attached? %></td>
        <td><%= expense.category.name %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.description %></td>
        <td><%= link_to 'Show', expense, class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense), class: 'btn btn-secondary' %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p><strong>Total: <%= @sum %><strong></p>
<br>

<%= link_to 'New', new_expense_path, class: 'btn btn-secondary' %>
